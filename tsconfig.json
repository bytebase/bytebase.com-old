{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM", "DOM.Iterable"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "jsx": "preserve",
    "paths": {
      "~/*": ["./*"]
    },
    "types": [
      "@nuxt/types",
      "@nuxtjs/i18n",
      "@nuxt/content",
      "@types/node",
      "@pinia/nuxt"
    ]
  },
  "exclude": ["node_modules", ".nuxt", "dist"]
}
